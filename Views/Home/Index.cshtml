<ul class="nav nav-tabs border-0 mb-3 justify-content-center">
    @{
        int tabIndex = 0;
    }
    @foreach (var item in (Dictionary<string,List<Book>>) ViewBag.BookDic)
    {
        <li class="nav-item">
            <a class="nav-link text-white @(tabIndex == 0 ? "active fw-bold" : "")" data-bs-toggle="tab" href="#@item.Key.Replace(" ", "_")">@item.Key</a>
        </li>
        tabIndex++;
    }

    
</ul>
<div class="tab-content">
    @{
        int paneIndex = 0;
    }
    @foreach (var item in (Dictionary<string, List<Book>>)ViewBag.BookDic)
    {
        var paneId = item.Key.Replace(" ", "_");
        <div class="tab-pane fade @(paneIndex == 0 ? "show active" : "")" id="@paneId">
            <div id="@paneId-Carousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var books = item.Value;
                        int groupSize = 3;
                        for (int i = 0; i < books.Count; i += groupSize)
                        {
                            var group = books.Skip(i).Take(groupSize);
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="container" style="max-width: 1000px; margin:auto;">
                                    <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
                                        @foreach (var book in group)
                                        {
                                            <div class="col">
                                                <a asp-action="Details" asp-controller="Books" asp-route-id="@book.Id" class="text-decoration-none">
                                                    <div class="card border-0 shadow-lg h-100 rounded-4 overflow-hidden book-card">
                                                        <!-- Book Image -->
                                                        <div class="position-relative">
                                                            <img src="/images/@book.ImageUrl"
                                                                 class="card-img-top"
                                                                 style="height:220px; object-fit:cover;" />
                                                            <span class="position-absolute top-0 end-0 badge bg-gradient px-3 py-2 m-2 shadow">
                                                                📚 Book
                                                            </span>
                                                        </div>

                                                        <!-- Book Details -->
                                                        <div class="card-body text-center bg-light">
                                                            <h6 class="fw-bold text-dark">@book.Title</h6>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#@paneId-Carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#@paneId-Carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>
        paneIndex++;
    }
</div>

<!-- Extra CSS for beauty -->
<style>
    .book-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(135deg, #192387, #0d6efd);
        color: #fff;
    }

