@model Book_Sphere.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Book</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UpdateNew">
                        <input asp-for="Id" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                            <input asp-for="ImageUrl" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PdfUrl" class="form-label fw-bold"></label>
                            <input asp-for="PdfUrl" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="PdfUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Auther" class="form-label fw-bold"></label>
                            <input asp-for="Auther" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="Auther" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stars" class="form-label fw-bold"></label>
                            <input asp-for="Stars" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="Stars" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CategoryId" class="form-label fw-bold"></label>
                            <select asp-for="CategoryId" class="form-select shadow-sm" asp-items="@(new SelectList(ViewBag.DeptList, "Id", "Name"))">
                                <option value="0">Select...</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow">
                                <i class="bi bi-arrow-left-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
