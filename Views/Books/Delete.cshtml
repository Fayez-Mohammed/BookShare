@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete</h3>
                </div>
                <div class="card-body text-center p-4">
                    <h5 class="mb-3 text-secondary">Are you sure you want to delete this book?</h5>

                    <div class="mb-4">
                        <h4 class="fw-bold text-dark">@Model.Title</h4>
                        <p class="text-muted">Book ID: <span class="fw-bold">@Model.Id</span></p>
                    </div>

                    <form asp-action="DeleteCurrent" method="post">
                        <input asp-for="Id" type="hidden" />

                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow">
                                <i class="bi bi-arrow-left-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
