@if (Model == null || !Model.Any())
{
 
    <div class="text-center p-5 rounded-4 shadow-lg ">
        <!-- Icon -->
        <i class="bi bi-search display-1 text-secondary"></i>

        <!-- Title -->
        <h2 class="mt-3 fw-bold text-danger">No Books Found</h2>

        <!-- Subtitle -->
        <p class="text-info mb-4" style="font-size:1.1rem;">
            We couldn’t find any matches for your search.
            Try using different keywords or browse our collection.
        </p>

        <!-- Action Button -->
        <a asp-controller="Books" asp-action="Index"
           class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm">
            <i class="bi bi-book-half"></i> Explore All Books
        </a>
   
        
      
      
 
  
    </div>
}
else
{
    <section class="container mt-5">
        <!-- Search Results Header -->
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary" style="text-shadow:1px 1px 6px rgba(0,0,0,0.2);">
                📚 Search Results
            </h2>
            <p class="text-info fs-5">
                We found <span class="fw-bold text-white">@Model.Count</span> book(s) matching your search.
            </p>
            <hr class="w-25 mx-auto border-2 border-primary opacity-75" />
        </div>

        <!-- Book Cards -->
        @if (User.IsInRole("Admin"))
        {
            <div class="row g-4">
                @{
                    await Html.RenderPartialAsync("_BooksCardForAdmin", Model);
                }
            </div>
        }
        else
        {
            <div class="row g-4">
                @{
                    await Html.RenderPartialAsync("_BooksCardForUsers", Model);
                }
            </div>
        }
    </section>
}
