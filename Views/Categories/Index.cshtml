@model List<Category>
@if(User.IsInRole("Admin"))
    {

        <div class="container mt-5">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary">📂 Categories</h2>
            <a asp-action="Add" class="btn custom-btn shadow-sm px-4">
                <i class="bi bi-plus-circle me-2"></i> Create New
            </a>

            <style>
                .custom-btn {
                    --bs-btn-color: #fff;
                    --bs-btn-bg: #192387;
                    --bs-btn-border-color: #192387;
                    --bs-btn-hover-color: #fff;
                    --bs-btn-hover-bg: #0d6efd;
                    --bs-btn-hover-border-color: #0d6efd;
                    --bs-btn-focus-shadow-rgb: 60, 153, 110;
                    --bs-btn-active-color: #fff;
                    --bs-btn-active-bg: #0d6efd;
                    --bs-btn-active-border-color: #0d6efd;
                    --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
                    --bs-btn-disabled-color: #fff;
                    --bs-btn-disabled-bg: #0d6efd;
                    --bs-btn-disabled-border-color: #0d6efd;
                }
            </style>

        </div>


        @await Html.PartialAsync("_CategoryCardsForAdmin", Model)


    </div>
    }
    @if(!User.IsInRole("Admin"))
    {
         @await Html.PartialAsync("_CategoryCardsForUsers", Model)
    }




























