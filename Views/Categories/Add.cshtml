@model Book_Sphere.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient text-white text-center rounded-top-4"
                     style="background: linear-gradient(135deg, #0d6efd, #192387);">
                
                    <div class="card-header bg-white text-primary text-center rounded-top-4">
                        <h3 class="mb-0">📖 Add New Category</h3>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="AddNew">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control rounded-pill shadow-sm" placeholder="Enter category name..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                            <input asp-for="ImageUrl" class="form-control rounded-pill shadow-sm" placeholder="Enter image URL..." />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow">
                                <i class="bi bi-check-circle"></i> Add Category
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow">
                                <i class="bi bi-arrow-left-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
