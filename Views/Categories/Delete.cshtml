@model Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-white text-center rounded-top-4"
                     style="background: linear-gradient(135deg, #dc3545, #a71d2a);">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Delete
                    </h3>
                </div>

                <div class="card-body text-center p-4">
                    <p class="fs-5">Are you sure you want to delete this category?</p>

                    <ul class="list-group mb-4">
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(c => c.Id):</strong> @Html.DisplayFor(c => c.Id)
                        </li>
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(c => c.Name):</strong> @Html.DisplayFor(c => c.Name)
                        </li>
                    </ul>

                    <form asp-action="DeleteCurrent" method="post">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow">
                                <i class="bi bi-trash-fill me-1"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
