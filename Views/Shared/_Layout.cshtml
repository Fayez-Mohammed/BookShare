@*lavenderblush _Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/images/Logo.png" />

    <title>@ViewData["Title"] - Book_Sphere</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Book_Sphere.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
 


    <style>
        /* Custom Theme */
        body {
            background-color: #f8f9fa;
        }

        .navbar-custom {
            background: linear-gradient(90deg, #007bff, #6610f2);
        }

            .navbar-custom .nav-link, .navbar-brand {
                color: #fff !important;
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffdd57 !important;
                }

        main {
            min-height: 70vh;
        }

        .content-wrapper {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            padding: 2rem;
            animation: fadeIn 0.6s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }


        footer {
            background-color: #212529;
            color: #adb5bd;
            padding: 20px 0;
        }

            footer a {
                color: #ffdd57;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }
    </style>
</head>
<body style="
    background: radial-gradient(
        circle at 50% 0%,
        #2a0d7c 0%,      /* بنفسجي أزرق فاتح */
        #0c0059 40%,     /* أزرق بنفسجي غامق */
        #050022 85%,     /* كحلي غامق */
        #000000 100%     /* أسود ناعم */
    );
    color: #f5f5f5;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
">
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm" style="background: linear-gradient(90deg, #192387, #0d6efd);">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold d-flex align-items-center text-white" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-half me-2 fs-3"></i>
                    <span class="fs-4">BookSphere</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler text-white border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarNav">

                    <!-- Center Search Bar -->
                    <form asp-controller="Books" asp-action="AfterSearch" method="post"
                          class="d-flex mx-auto rounded-pill shadow-sm overflow-hidden"
                          style="max-width:450px; background:#fff;">
                        <input type="text" name="SearchResult"
                               class="form-control border-0 px-3"
                               placeholder="🔍 Search books..." />
                        <button class="btn px-4" type="submit" style="background:#192387; color:#fff;">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!-- Nav Links -->
                    <ul class="navbar-nav ms-auto align-items-lg-center fw-semibold">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Categories" asp-action="Index">
                                <i class="bi bi-grid me-1"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Books" asp-action="Index">
                                <i class="bi bi-journal-bookmark me-1"></i> Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i> Privacy
                            </a>
                        </li>

                        <!-- Auth -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="LogOut">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i> Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                        }

                        <!-- Admin -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-controller="Role" asp-action="Role">
                                    <i class="bi bi-shield-lock-fill me-1"></i> Admin
                                </a>
                            </li>
                        }
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Books" asp-action="Favor">
                                    <i class="bi bi-journal-bookmark me-1"></i> Favorites
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <span class="nav-link text-white fw-bold">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @User.Identity.Name
                                </span>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <style>
        .navbar-nav .nav-link {
            color: white;
            transition: all 0.3s ease;
            position: relative;
        }

            /* لون عند hover */
            .navbar-nav .nav-link:hover {
                color: #ffc107; /* أصفر */
                transform: scale(1.1);
                color:aqua
            }

            /* خط متحرك تحت اللينك */
            .navbar-nav .nav-link::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: -5px;
                width: 0%;
                height: 2px;
                background-color: blue;
                transition: width 0.3s ease;
            }

            .navbar-nav .nav-link:hover::after {
                width: 100%;
            }
    </style>


    @RenderBody()
    <!-- Footer -->
    <!--linear-gradient(135deg, #000714, #131b2b, #0a1726); -->
    @if(ViewData["HideFooter"] == null || !(bool)ViewData["HideFooter"])
    {
        <br />
        <br />

       
            <footer  class="text-white mt-5"  style="

             background: radial-gradient(
         circle at 50% 0%,
         #2a0d7c 0%,      /* بنفسجي أزرق فاتح */
         #0c0059 40%,     /* أزرق بنفسجي غامق */
         #050022 85%,     /* كحلي غامق */
         #000000 100%     /* أسود ناعم */
              );
               color: #f5f5f5;
                  
              font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            ">
                <div class="container py-4">
                    <div class="row align-items-center">

                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            <h5 class="fw-bold">📚 Book_Sphere</h5>
                            <p class="mb-0 small text-light">Your gateway to knowledge and imagination</p>
                        </div>

                        <div class="col-md-6 text-center text-md-end">
                        <a href="https://www.facebook.com/share/16uZW7Rp76/" target="_blank" class="text-white me-3 fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="https://www.linkedin.com/in/fayez-mohammed-meabed/" target="_blank" class="text-white me-3 fs-5"><i class="bi bi-linkedin"></i></a>
                        <a href="https://github.com/Fayez-Mohammed" target="_blank" class="text-white me-3 fs-5">
                                <i class="bi bi-github"></i>
                            </a>

                        </div>
                    </div>

                    <hr class="border-light my-3" />

                    <div class="text-center small text-light">
                        &copy; 2025 <strong>Book_Sphere</strong>. All Rights Reserved.
                    </div>
                </div>
            </footer>
        
    
    }
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

 
    <script>
        $(document).on("click", ".favorite-btn", function () {
                   var btn = $(this);
                   var id = btn.data("id");
                   var token = $('#antiForgeryForm input[name="__RequestVerificationToken"]').val();

                   $.ajax({
                       url: '@Url.Action("Favorite", "Books")',
                       type: 'POST',
                       data: { id: id, __RequestVerificationToken: token },
                       success: function (response) {
                           if (response.success) {
                               if (response.favor === true) {
                                   btn.removeClass("btn-warning").addClass("btn-danger")
                                      .html('<i class="bi bi-heart-fill"></i> Favorited');
                               } else {
                                   btn.removeClass("btn-danger").addClass("btn-warning")
                                      .html('<i class="bi bi-heart-fill"></i> Favorite');
                               }
                           } else {
                               alert(response.message || "Something went wrong!");
                           }
                       },
                       error: function (xhr) {
                           console.log(xhr.responseText);
                           alert("Server error! Check controller logs.");
                       }
                   });
               });
    </script>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
