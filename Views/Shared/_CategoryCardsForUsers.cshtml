@model List<Category>

<div class="container mt-5">
    <h2 class="fw-bold text-center text-white mb-4">📚 Explore Categories</h2>
    <br />

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-lg border-0 h-100 text-center rounded-4 overflow-hidden category-card">
                    <img src="/images/@item.ImageUrl" class="card-img-top" alt="@item.Name"
                         style="height:220px; object-fit:cover;" />
                    <div class="card-body bg-dark text-white">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="text-muted small">Discover top books in this category</p>
                        <a asp-action="Details" asp-controller="Categories" asp-route-id="@item.Id"
                           class="btn btn-primary px-4 rounded-pill shadow-sm">
                            <i class="bi bi-book"></i> View Books
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .category-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        }
</style>
