@model List<Category>

<div class="container mt-5">
    <h2 class="fw-bold text-center text-white mb-4">⚙️ Manage Categories</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-lg border-0 h-100 text-center rounded-4 overflow-hidden category-card">
                    <img src="/images/@item.ImageUrl" class="card-img-top" alt="@item.Name"
                         style="height:220px; object-fit:cover;" />
                    <div class="card-body bg-dark text-white">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="text-muted small">Manage books under this category</p>
                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <a asp-action="Details" asp-controller="Categories" asp-route-id="@item.Id"
                               class="btn btn-outline-light btn-sm px-3 rounded-pill">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Edit" asp-controller="Categories" asp-route-id="@item.Id"
                               class="btn btn-outline-primary btn-sm px-3 rounded-pill">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Categories" asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm px-3 rounded-pill">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .category-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
        }
</style>
